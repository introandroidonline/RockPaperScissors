<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Results"
        android:id="@+id/txtResults"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" android:textSize="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:id="@+id/btnPlayAgain"
        android:layout_marginTop="24dp"
        android:layout_below="@id/txtResults"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Computer Choice"
        android:id="@+id/txtComputerChoice"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/txtResults"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player Choice"
        android:id="@+id/txtPlayerChoice"
        android:layout_above="@+id/txtComputerChoice" android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"/>
</RelativeLayout>